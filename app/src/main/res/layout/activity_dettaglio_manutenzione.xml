<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unica.checkengine.DettaglioManutenzioneActivity">

    <Button
        android:id="@+id/button_meccanico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_eseguita"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/blue_button_style"
        android:text="Chiama il meccanico"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/text_messaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/semaforo"
        android:layout_marginTop="47dp"
        android:layout_toStartOf="@+id/semaforo"
        android:text="uno due tre stellauno due tre stellauno due tre stellauno due tre stella"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_sottotitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/semaforo"
        android:paddingLeft="10dp"
        android:text="Manutenzione"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/semaforo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/text_sottotitolo"
        android:src="@drawable/semaforo_rosso" />

    <Button
        android:id="@+id/button_eseguita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/blue_button_style"
        android:onClick="aggiornaKm"
        android:text="SEGNA COME ESEGUITA"
        android:textColor="#fff" />

</RelativeLayout>
