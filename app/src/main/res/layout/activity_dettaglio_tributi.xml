<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.unica.checkengine.DettaglioTributiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="uno due tre stellauno due tre stellauno due tre stellauno due tre stella"
        android:id="@+id/text_messaggio"
        android:layout_below="@+id/semaforo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_toStartOf="@+id/semaforo"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tributi"
        android:id="@+id/text_sottotitolo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semaforo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_sottotitolo"
        android:src="@drawable/semaforo_rosso"
        android:paddingLeft="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAGA"
        android:id="@+id/button_paga"
        android:layout_marginBottom="54dp"
        android:background="@drawable/blue_button_style"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/text_messaggio" />
</RelativeLayout>


